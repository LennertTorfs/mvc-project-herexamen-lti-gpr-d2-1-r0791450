@model MVC_Project_Herexamen.Viewmodel.UserManagementViewModel

@{
    ViewBag.Title = "Gebruikers beheren";
}

<h2>Gebruikers beheren</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nieuwe gebruiker toevoegen</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Gebruikersnaam</th>
            <th>Naam</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            var userRole = Model.Roles.FirstOrDefault(r => r.Id == user.Id)?.Name;
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName @user.Name</td>
                <td>@user.Email</td>
                <td>@userRole</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-secondary btn-sm">Bewerken</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Verwijderen</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
